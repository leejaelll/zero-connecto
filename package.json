{
  "private": true,
  "description": "Sass 미니 프로젝트",
  "version": "0.0.1",
  "scripts": {
    "dev": "run-p compile serve",
    "serve": "live-server public --host=localhost --port=3000 --no-browser",
    "compile": "sass src/scss:public/assets/styles --no-charset --watch --update",
    "build": "npm run compile -- --styled compressed --no-source-map",
    "clear": "rm -rf public/assets/styles"
  },
  "devDependencies": {
    "live-server": "1.2.2",
    "npm-run-all": "4.1.5",
    "rimraf": "^3.0.2"
  }
}
